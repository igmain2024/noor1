//- This template is for the main pages (Home, Blog, Contact, etc.)
-
    //- Flag to get specific description box text from the MD
    let descBoxFlag=0
doctype html
html 
    head
        include template/head
        block scripts
    body
        include template/nav
        //- Get title text header
        each contentTag in content
            div.headerTitle #{contentTag.body}
            //- Break iteration to only get header 
            -   break
        br
        //- Get Description box
        each contentTag in content
            if descBoxFlag===1
                div.descriptionBox #{contentTag.body}
                -   descBoxFlag++
                    break
            else
                -   descBoxFlag++
        //-Insert content depending on the page specifics
        block content 
    footer
        include template/footer