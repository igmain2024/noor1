//- Head. Usage: include under head indentation
-
    var titleFromMD
    var descriptionFromMD
    let descriptionCounter=0
//- Get page tab title
each contentTag in content 
    - titleFromMD=`${contentTag.head}`
    - break
//- Get description sub text
each contentTag in content 
    if descriptionCounter===1
        - descriptionFromMD=contentTag.body
        - break
    - descriptionCounter++
head
    style
        include ../../css/index.css
    meta(charset=`${head.meta.charset}`)
    meta(property="og:title" content=titleFromMD)
    meta(property="og:type" content="website")
    meta(property="og:url" content="https://griffenagnello.herokuapp.com/")
    meta(property="og:image" content="https://griffenagnello.herokuapp.com/images/other/favicon.ico")
    //- meta(property="og:description" content="Griffen's personal website porfolio that documents his programming journey. Contents include a blog, contact info, and more.")
    meta(property="og:description" content=descriptionFromMD)
    meta(name="theme-color" content="#003F88")

    //- meta(name="viewport" content="width=100, initial-scale=1.0")
    title=titleFromMD
    //-favicon.ico
    link(rel="icon", type="image/x-icon", href="/images/other/favicon.ico")